{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],

        "rewrites": [{
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "/login",
                "destination": "/login.html"
            },
            {
                "source": "/profile",
                "destination": "/profile.html"
            }
        ],
        "redirects": [{
            "source": "/sessionLogout",
            "destination": "/login",
            "type": 302
        }]
    }
}